@using Microsoft.AspNetCore.Identity
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>


@{
    ViewData["Title"] = "Index";
}
<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Roles</h1>
    <div class="row">
        <div class="col-auto">
            <a class="btn btn-info btn-sm rounded-0 mb-1" asp-action="Create">Create role</a>
            <a class="btn btn-info btn-sm rounded-0 mb-1" asp-action="AddUserToRole">Add user to role</a>
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (IdentityRole item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
            </tr>
        }
        </tbody>
    </table>
</div>