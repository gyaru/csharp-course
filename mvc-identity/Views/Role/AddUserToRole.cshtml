@{
    ViewData["Title"] = "Add user to role";
}

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Add user to role</h1>
    <form asp-action="AddUserToRole" method="post">
        <div class="form-group">
            <label class="control-label">User:</label>
            <select name="user" class="form-control" asp-items="ViewBag.Users"></select>
        </div>
        <div class="form-group">
            <label class="control-label">Role:</label>
            <select name="role" class="form-control" asp-items="ViewBag.Roles"></select>
        </div>
        <input type="submit" value="Create" class="btn btn-primary"/>
    </form>
</div>